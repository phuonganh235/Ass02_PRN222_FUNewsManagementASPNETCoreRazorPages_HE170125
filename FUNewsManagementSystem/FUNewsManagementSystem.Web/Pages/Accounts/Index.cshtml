@page
@model FUNewsManagementSystem.Web.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Accounts";
}

<h3>Accounts</h3>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card mb-4">
    <div class="card-header bg-secondary text-white">
        Create / Edit Account
    </div>
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="Input.AccountID" />

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Account Name</label>
                    <input class="form-control" asp-for="Input.AccountName" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Email</label>
                    <input class="form-control" asp-for="Input.AccountEmail" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Password</label>
                    <input type="text" class="form-control" asp-for="Input.AccountPassword" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Role</label>
                    <select class="form-select" asp-for="Input.AccountRole">
                        <option value="3">Admin</option>
                        <option value="2">Staff</option>
                        <option value="1">Lecturer</option>
                    </select>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary" formaction="?handler=Create">Create New</button>
                <button class="btn btn-warning" formaction="?handler=Update">Update Existing</button>
            </div>

        </form>
    </div>
</div>

<table class="table table-bordered table-striped bg-white shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Role</th>
            <th style="width:100px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model.Accounts)
        {
            <tr>
                <td>@acc.AccountID</td>
                <td>@acc.AccountName</td>
                <td>@acc.AccountEmail</td>
                <td>@acc.AccountPassword</td>
                <td>
                    @(acc.AccountRole == 3 ? "Admin" :
                        acc.AccountRole == 2 ? "Staff" : "Lecturer")
                </td>
                <td>
                    <form method="post" class="d-inline">
                        <input type="hidden" name="accountId" value="@acc.AccountID" />
                        <button class="btn btn-sm btn-danger"
                                formaction="?handler=Delete"
                                onclick="return confirm('Delete this account?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
