@page
@model FUNewsManagementSystem.Web.Pages.NewsDetailsModel
@{
    ViewData["Title"] = Model.News.NewsTitle;
}

<div class="row">
    <!-- Main Content -->
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active">@Model.News.CategoryName</li>
                    </ol>
                </nav>

                <div class="mb-3">
                    <span class="badge bg-primary">@Model.News.CategoryName</span>
                </div>

                <h1 class="mb-3">@Model.News.NewsTitle</h1>

                <p class="lead text-muted">@Model.News.Headline</p>

                <div class="mb-4">
                    <small class="text-muted">
                        <i class="fas fa-user"></i> By <strong>@Model.News.CreatedByName</strong> |
                        <i class="fas fa-calendar"></i> @Model.News.CreatedDate.ToString("dd MMMM yyyy, HH:mm")
                    </small>
                </div>

                @if (Model.News.Tags.Any())
                {
                    <div class="mb-4">
                        <i class="fas fa-tags"></i>
                        @foreach (var tag in Model.News.Tags)
                        {
                            <span class="badge bg-secondary">@tag.TagName</span>
                        }
                    </div>
                }

                <hr />

                <div class="news-content" style="line-height: 1.8; font-size: 1.1rem;">
                    @Model.News.NewsContent
                </div>

                @if (!string.IsNullOrEmpty(Model.News.NewsSource))
                {
                    <hr />
                    <p class="text-muted">
                        <i class="fas fa-external-link-alt"></i> <strong>Source:</strong> @Model.News.NewsSource
                    </p>
                }

                <hr />

                <!-- Social Share Buttons (Optional) -->
                <div class="mb-3">
                    <h5>Share this article:</h5>
                    <button class="btn btn-primary btn-sm" onclick="shareOnFacebook()">
                        <i class="fab fa-facebook"></i> Facebook
                    </button>
                    <button class="btn btn-info btn-sm" onclick="shareOnTwitter()">
                        <i class="fab fa-twitter"></i> Twitter
                    </button>
                    <button class="btn btn-success btn-sm" onclick="copyLink()">
                        <i class="fas fa-link"></i> Copy Link
                    </button>
                </div>
            </div>
        </div>

        <!-- Comments Section (Read-only for public) -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-comments"></i> Comments (@Model.Comments.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.IsLoggedIn)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <a asp-page="/Staff/NewsArticles/Details" asp-route-id="@Model.News.NewsArticleId">
                            Login to view and add comments
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <a asp-page="/Login">Login</a> to comment on this article.
                    </div>
                }

                <!-- Display comments (read-only) -->
                @foreach (var comment in Model.Comments)
                {
                    <div class="comment-box">
                        <div class="comment-header">
                            <span class="comment-author">
                                <i class="fas fa-user-circle"></i> @comment.AccountName
                            </span>
                            <span class="comment-time">@comment.TimeAgo</span>
                        </div>
                        <p class="comment-content">@comment.Content</p>
                    </div>
                }

                @if (!Model.Comments.Any())
                {
                    <div class="text-center text-muted">
                        <i class="fas fa-comment-slash"></i>
                        <p>No comments yet. Be the first to comment!</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Related News -->
        @if (Model.RelatedNews.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-newspaper"></i> Related Articles</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var related in Model.RelatedNews)
                    {
                        <a asp-page="/NewsDetails" asp-route-id="@related.NewsArticleId"
                           class="list-group-item list-group-item-action">
                            <h6 class="mb-1">@related.NewsTitle</h6>
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> @related.CreatedDate.ToString("dd/MM/yyyy")
                            </small>
                        </a>
                    }
                </div>
            </div>
        }

        <!-- Latest News -->
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Latest News</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var latest in Model.LatestNews)
                {
                    <a asp-page="/NewsDetails" asp-route-id="@latest.NewsArticleId"
                       class="list-group-item list-group-item-action">
                        <h6 class="mb-1">@latest.NewsTitle</h6>
                        <small class="text-muted">@latest.CreatedDate.ToString("dd/MM/yyyy")</small>
                    </a>
                }
            </div>
        </div>

        <!-- Categories -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-folder"></i> Categories</h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var category in Model.Categories)
                {
                    <a asp-page="/Index" asp-route-categoryId="@category.CategoryId"
                       class="list-group-item list-group-item-action">
                        @category.CategoryName
                    </a>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const pageUrl = window.location.href;
        const pageTitle = '@Model.News.NewsTitle';

        function shareOnFacebook() {
            window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(pageUrl)}`, '_blank', 'width=600,height=400');
        }

        function shareOnTwitter() {
            window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(pageUrl)}&text=${encodeURIComponent(pageTitle)}`, '_blank', 'width=600,height=400');
        }

        function copyLink() {
            navigator.clipboard.writeText(pageUrl).then(function() {
                toastr.success('Link copied to clipboard!');
            }, function() {
                toastr.error('Failed to copy link');
            });
        }
    </script>
}