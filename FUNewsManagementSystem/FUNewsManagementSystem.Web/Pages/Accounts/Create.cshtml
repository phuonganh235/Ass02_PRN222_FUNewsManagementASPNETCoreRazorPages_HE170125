@page
@model FUNewsManagementSystem.Web.Pages.Accounts.CreateModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<h2>Create Account</h2>
<hr />

<form method="post">
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Account.AccountName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Account.AccountEmail" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Account.AccountPassword" type="password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Role</label>
        <select asp-for="Account.AccountRole" class="form-select">
            <option value="1">Lecturer</option>
            <option value="2">Staff</option>
            <option value="3">Admin</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>
