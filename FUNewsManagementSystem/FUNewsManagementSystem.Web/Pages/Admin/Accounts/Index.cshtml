@page
@model FUNewsManagementSystem.Web.Pages.Admin.Accounts.IndexModel
@{
    ViewData["Title"] = "Account Management";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-users"></i> Account Management</h2>
        <p class="text-muted">Manage user accounts with real-time updates</p>
    </div>
    <div class="col-md-6 text-end">
        <button class="btn btn-primary" onclick="openCreateModal()">
            <i class="fas fa-user-plus"></i> Create New Account
        </button>
    </div>
</div>

<!-- Search & Filter -->
<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Search & Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Search by name or email..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Role</label>
                <select name="role" class="form-select">
                    <option value="">All Roles</option>
                    <option value="0">Admin</option>
                    <option value="1">Staff</option>
                    <option value="2">Lecturer</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <a href="/Admin/Accounts/Index" class="btn btn-success w-100">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Accounts Table -->
<div class="card mt-3">
    <div class="card-body">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <strong>Total:</strong> @Model.Accounts.Count accounts found
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="10%">ID</th>
                        <th width="30%">Name</th>
                        <th width="35%">Email</th>
                        <th width="15%">Role</th>
                        <th width="10%">Actions</th>
                    </tr>
                </thead>
                <tbody id="accountTableBody">
                    @foreach (var account in Model.Accounts)
                    {
                        <tr id="row_@account.AccountId">
                            <td><strong>@account.AccountId</strong></td>
                            <td>
                                <i class="fas fa-user"></i> @account.AccountName
                            </td>
                            <td>
                                <i class="fas fa-envelope"></i> @account.AccountEmail
                            </td>
                            <td>
                                @{
                                    var roleClass = account.Role switch
                                    {
                                        0 => "bg-danger",
                                        1 => "bg-primary",
                                        2 => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                    var roleName = account.Role switch
                                    {
                                        0 => "Admin",
                                        1 => "Staff",
                                        2 => "Lecturer",
                                        _ => "Unknown"
                                    };
                                }
                                <span class="badge @roleClass">@roleName</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-warning"
                                            onclick="openEditModal(@account.AccountId)"
                                            title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-danger"
                                            onclick="confirmDelete(@account.AccountId, '@account.AccountName')"
                                            title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Accounts.Any())
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-triangle"></i> No accounts found.
            </div>
        }
    </div>
</div>

<!-- Create Account Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-user-plus"></i> Create New Account</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="createForm">
                    <div class="mb-3">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="createName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="createEmail" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="createPassword" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role <span class="text-danger">*</span></label>
                        <select class="form-select" id="createRole" required>
                            <option value="0">Admin</option>
                            <option value="1" selected>Staff</option>
                            <option value="2">Lecturer</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn btn-primary" onclick="createAccount()">
                    <i class="fas fa-save"></i> Create Account
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Account Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="fas fa-edit"></i> Edit Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editAccountId" />
                    <div class="mb-3">
                        <label class="form-label">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="editEmail" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password <small class="text-muted">(leave blank to keep current)</small></label>
                        <input type="password" class="form-control" id="editPassword"
                               placeholder="Enter new password or leave blank" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role <span class="text-danger">*</span></label>
                        <select class="form-select" id="editRole" required>
                            <option value="0">Admin</option>
                            <option value="1">Staff</option>
                            <option value="2">Lecturer</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" class="btn btn-warning" onclick="updateAccount()">
                    <i class="fas fa-save"></i> Update Account
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let createModal, editModal;

        document.addEventListener('DOMContentLoaded', function () {
            createModal = new bootstrap.Modal(document.getElementById('createModal'));
            editModal = new bootstrap.Modal(document.getElementById('editModal'));

            // SignalR listeners
            if (window.signalRConnection) {
                window.signalRConnection.on("AccountCreated", function (accountName) {
                    toastr.info(`ðŸ‘¤ New account "${accountName}" has been created`, 'Account Created', {
                        timeOut: 5000,
                        closeButton: true
                    });
                    setTimeout(() => location.reload(), 2000);
                });

                window.signalRConnection.on("AccountUpdated", function (accountName) {
                    toastr.info(`âœï¸ Account "${accountName}" has been updated`, 'Account Updated', {
                        timeOut: 5000,
                        closeButton: true
                    });
                    setTimeout(() => location.reload(), 2000);
                });

                window.signalRConnection.on("AccountDeleted", function (accountName) {
                    toastr.warning(`ðŸ—‘ï¸ Account "${accountName}" has been deleted`, 'Account Deleted', {
                        timeOut: 5000,
                        closeButton: true
                    });
                    setTimeout(() => location.reload(), 2000);
                });

                window.signalRConnection.on("ForceLogout", function (reason) {
                    toastr.error(`âš ï¸ ${reason}`, 'Session Terminated', {
                        timeOut: 3000,
                        closeButton: true
                    });
                    setTimeout(() => {
                        window.location.href = '/Login/Index';
                    }, 3000);
                });
            }
        });

        function openCreateModal() {
            document.getElementById('createForm').reset();
            createModal.show();
        }

        async function createAccount() {
            const name = document.getElementById('createName').value.trim();
            const email = document.getElementById('createEmail').value.trim();
            const password = document.getElementById('createPassword').value;
            const role = parseInt(document.getElementById('createRole').value);

            if (!name || !email || !password) {
                toastr.error('Please fill in all required fields');
                return;
            }

            showLoading();

            try {
                const response = await fetch('/Admin/Accounts/Index?handler=Create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        accountName: name,
                        accountEmail: email,
                        accountPassword: password,
                        role: role
                    })
                });

                const result = await response.json();

                hideLoading();

                if (result.success) {
                    toastr.success(result.message);
                    createModal.hide();

                    // Notify via SignalR
                    await window.signalRConnection?.invoke("NotifyAccountCreated", name);

                    setTimeout(() => location.reload(), 1500);
                } else {
                    toastr.error(result.message);
                }
            } catch (error) {
                hideLoading();
                toastr.error('An error occurred while creating the account');
                console.error(error);
            }
        }

        async function openEditModal(id) {
            showLoading();

            try {
                const response = await fetch(`/Admin/Accounts/Index?handler=Get&id=${id}`);
                const account = await response.json();

                hideLoading();

                document.getElementById('editAccountId').value = account.accountId;
                document.getElementById('editName').value = account.accountName;
                document.getElementById('editEmail').value = account.accountEmail;
                document.getElementById('editPassword').value = '';
                document.getElementById('editRole').value = account.role;

                editModal.show();
            } catch (error) {
                hideLoading();
                toastr.error('Failed to load account data');
                console.error(error);
            }
        }

        async function updateAccount() {
            const accountId = parseInt(document.getElementById('editAccountId').value);
            const name = document.getElementById('editName').value.trim();
            const email = document.getElementById('editEmail').value.trim();
            const password = document.getElementById('editPassword').value;
            const role = parseInt(document.getElementById('editRole').value);

            if (!name || !email) {
                toastr.error('Please fill in all required fields');
                return;
            }

            showLoading();

            try {
                const payload = {
                    accountId: accountId,
                    accountName: name,
                    accountEmail: email,
                    role: role
                };

                // Only include password if provided
                if (password) {
                    payload.accountPassword = password;
                }

                const response = await fetch('/Admin/Accounts/Index?handler=Update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                hideLoading();

                if (result.success) {
                    toastr.success(result.message);
                    editModal.hide();

                    // Notify via SignalR
                    await window.signalRConnection?.invoke("NotifyAccountUpdated", name, accountId, true);

                    setTimeout(() => location.reload(), 1500);
                } else {
                    toastr.error(result.message);
                }
            } catch (error) {
                hideLoading();
                toastr.error('An error occurred while updating the account');
                console.error(error);
            }
        }

        async function confirmDelete(id, name) {
            if (!confirm(`âš ï¸ DELETE CONFIRMATION\n\nAre you sure you want to delete account:\n"${name}"?\n\nThis action cannot be undone.\n\nNote: Cannot delete accounts that have created articles.`)) {
                return;
            }

            showLoading();

            try {
                const response = await fetch(`/Admin/Accounts/Index?handler=Delete&id=${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                hideLoading();

                if (result.success) {
                    toastr.success(result.message);

                    // Remove row with animation
                    const row = document.getElementById(`row_${id}`);
                    if (row) {
                        row.style.transition = 'opacity 0.5s';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 500);
                    }

                    // Notify via SignalR - force logout for this account
                    await window.signalRConnection?.invoke("NotifyAccountDeleted", name, id);
                } else {
                    toastr.error(result.message);
                }
            } catch (error) {
                hideLoading();
                toastr.error('An error occurred while deleting the account');
                console.error(error);
            }
        }
    </script>
}
