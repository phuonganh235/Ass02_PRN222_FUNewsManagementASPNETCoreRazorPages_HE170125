@page "{id:int}"
@model FUNewsManagementSystem.Web.Pages.Public.DetailModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "News Detail";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="fw-bold">@Model.NewsDetail.NewsTitle</h2>
    <p class="text-muted">
        Published: @Model.NewsDetail.CreatedDate.ToString("yyyy-MM-dd HH:mm") |
        Category: @Model.NewsDetail.CategoryName
    </p>

    <div class="mt-3 mb-4">
        @Html.Raw(Model.NewsDetail.NewsContent)
    </div>

    <hr />

    <h4>Comments</h4>

    @if (Model.CommentList == null || !Model.CommentList.Any())
    {
        <p class="text-muted">No comments yet. Be the first to comment!</p>
    }
    else
    {
        <ul class="list-group mb-3">
            @foreach (var c in Model.CommentList)
            {
                <li class="list-group-item">
                    <strong>@c.CommentBy</strong>
                    <span class="text-muted small float-end">@c.CommentDate.ToString("yyyy-MM-dd HH:mm")</span>
                    <p class="mt-2">@c.CommentText</p>
                </li>
            }
        </ul>
    }

    <hr />

    <h5>Leave a comment</h5>

    <form method="post" asp-page-handler="AddComment">
        <input type="hidden" name="newsArticleId" value="@Model.NewsDetail.NewsArticleID" />
        <div class="mb-3">
            <label class="form-label">Your Name</label>
            <input type="text" name="commentBy" class="form-control"
                   value="@Model.CurrentUserName" placeholder="Enter your name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Your Comment</label>
            <textarea name="commentText" class="form-control" rows="3" placeholder="Write your comment..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit Comment</button>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }
</div>
