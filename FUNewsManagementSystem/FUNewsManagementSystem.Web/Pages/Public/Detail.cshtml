@page "{id:int}"
@model FUNewsManagementSystem.Web.Pages.Public.DetailModel
@{
    ViewData["Title"] = "News Detail";
}

@if (Model.Article == null)
{
    <p>Article not found.</p>
}
else
{
    <h2>@Model.Article.NewsTitle</h2>
    <p><em>@Model.Article.CreatedDate.ToString("yyyy-MM-dd")</em></p>
    <p><strong>Source:</strong> @Model.Article.NewsSource</p>
    <p><strong>Category:</strong> @Model.Article.CategoryName</p>
    <hr />
    <p>@Model.Article.NewsContent</p>

    <p>
        <strong>Tags:</strong>
        @Model.Article.SelectedTagNamesDisplay
    </p>
}
