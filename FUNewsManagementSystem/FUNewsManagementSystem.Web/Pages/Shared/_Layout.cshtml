<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU News Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-pink-gradient border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-pink-dark" asp-page="/Index">
                    <i class="fas fa-newspaper"></i> FU News Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index"><i class="fas fa-home"></i> Home</a>
                        </li>

                        @{
                            var userRole = Context.Session.GetInt32("UserRole");
                            var userName = Context.Session.GetString("UserName");
                        }

                        @if (userRole == 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/Dashboard">
                                    <i class="fas fa-chart-line"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/Accounts/Index">
                                    <i class="fas fa-users"></i> Accounts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Admin/Comments/Index">
                                    <i class="fas fa-comments"></i> Comments
                                </a>
                            </li>
                        }
                        @if (userRole == 1) // Staff (role = 1)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Staff/Categories/Index">
            <i class="fas fa-folder"></i> Categories
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Staff/NewsArticles/Index">
            <i class="fas fa-newspaper"></i> News Articles
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-page="/Staff/Tags/Index">
            <i class="fas fa-tags"></i> Tags
        </a>
    </li>
}
                    </ul>

                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @userName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end pink-dropdown" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-page="/Profile"><i class="fas fa-user"></i> Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-page="/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link btn btn-pink-outline" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-pink-light">
        <div class="container text-center">
            <span class="text-pink-dark">
                <i class="fas fa-heart text-pink"></i>
                &copy; 2025 - FU News Management System
                <i class="fas fa-heart text-pink"></i>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // SignalR Connection
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .withAutomaticReconnect()
            .build();

        connection.on("ReceiveNotification", function (message, type) {
            toastr[type || 'info'](message);
        });

        // Category notifications for Staff
        connection.on("CategoryCreated", function (categoryName) {
            toastr.success(`📁 Staff created new category "${categoryName}"`, 'Category Created', {
                timeOut: 5000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("CategoryUpdated", function (categoryName) {
            toastr.info(`✏️ Category "${categoryName}" was updated by Staff`, 'Category Updated', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("CategoryDeleted", function (categoryName) {
            toastr.warning(`🗑️ Category "${categoryName}" was deleted by Staff`, 'Category Deleted', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        // News Article notifications for Staff
        connection.on("NewsArticleCreated", function (newsTitle, authorName) {
            toastr.success(`📰 ${authorName} published new article "${newsTitle}"`, 'Article Created', {
                timeOut: 5000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("NewsArticleUpdated", function (newsTitle) {
            toastr.info(`✏️ Article "${newsTitle}" was updated`, 'Article Updated', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("NewsArticleDeleted", function (newsTitle) {
            toastr.warning(`🗑️ Article "${newsTitle}" was deleted`, 'Article Deleted', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        // Tag notifications for Staff
        connection.on("TagCreated", function (tagName) {
            toastr.success(`🏷️ Staff created new tag "${tagName}"`, 'Tag Created', {
                timeOut: 5000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("TagUpdated", function (tagName) {
            toastr.info(`✏️ Tag "${tagName}" was updated by Staff`, 'Tag Updated', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("TagDeleted", function (tagName) {
            toastr.warning(`🗑️ Tag "${tagName}" was deleted by Staff`, 'Tag Deleted', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        // Account notifications for Staff (when Admin creates/updates/deletes accounts)
        connection.on("AccountCreated", function (accountName) {
            toastr.info(`👤 Admin created new account "${accountName}"`, 'Account Created', {
                timeOut: 5000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("AccountUpdated", function (accountName) {
            toastr.info(`✏️ Admin updated account "${accountName}"`, 'Account Updated', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("AccountDeleted", function (accountName) {
            toastr.warning(`🗑️ Admin deleted account "${accountName}"`, 'Account Deleted', {
                timeOut: 4000,
                closeButton: true,
                progressBar: true
            });
        });

        connection.on("RefreshCategories", function () {
            if (typeof refreshCategoriesList === 'function') {
                refreshCategoriesList();
            }
        });

        connection.on("RefreshNewsList", function () {
            if (typeof refreshNewsList === 'function') {
                refreshNewsList();
            }
        });

        connection.on("RefreshTags", function () {
            if (typeof refreshTagsList === 'function') {
                refreshTagsList();
            }
        });

        connection.on("RefreshDashboard", function () {
            if (typeof refreshDashboard === 'function') {
                refreshDashboard();
            }
        });

        connection.on("ReceiveComment", function (newsArticleId, commentId, accountName, content, timeAgo) {
            if (typeof addCommentToList === 'function') {
                addCommentToList(newsArticleId, commentId, accountName, content, timeAgo);
            }
        });

        connection.on("CommentDeleted", function (commentId, newsArticleId) {
            if (typeof removeCommentFromList === 'function') {
                removeCommentFromList(commentId);
            }
        });

        // Account management - Force logout handlers
        connection.on("ForceLogoutByAccountId", function (accountId) {
            const currentUserId = @(Context.Session.GetInt32("UserId") ?? 0);
            if (currentUserId === accountId) {
                toastr.error('⚠️ Your account has been deleted by Admin. You will be logged out.', 'Account Deleted', {
                    timeOut: 3000,
                    closeButton: true
                });
                setTimeout(function () {
                    window.location.href = '/Login/Index';
                }, 3000);
            }
        });

        connection.on("CheckAccountStatus", function (accountId) {
            const currentUserId = @(Context.Session.GetInt32("UserId") ?? 0);
            if (currentUserId === accountId) {
                toastr.error('⚠️ Your account has been deactivated by Admin. You will be logged out.', 'Account Deactivated', {
                    timeOut: 3000,
                    closeButton: true
                });
                setTimeout(function () {
                    window.location.href = '/Login/Index';
                }, 3000);
            }
        });

        // Comment moderation - Notification when comment is deleted by Admin
        connection.on("CommentDeletedByAdmin", function (commentId, accountId) {
            const currentUserId = @(Context.Session.GetInt32("UserId") ?? 0);
            if (currentUserId === accountId) {
                toastr.warning('⚠️ Your comment has been removed by Admin due to violation of community guidelines.', 'Comment Removed', {
                    timeOut: 10000,
                    closeButton: true,
                    progressBar: true
                });
            }
        });

        connection.start().catch(function (err) {
            console.error('SignalR Connection Error: ', err.toString());
        });

        // Make connection available globally
        window.signalRConnection = connection;
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>