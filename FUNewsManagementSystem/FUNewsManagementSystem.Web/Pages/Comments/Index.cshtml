@page "{id}"
@model FUNewsManagementSystem.Web.Pages.Comments.IndexModel
@{
    ViewData["Title"] = "Bình luận bài viết";
}

<h3>Bình luận cho bài viết @Model.NewsArticleID</h3>

<form method="post">
    <textarea asp-for="Content" rows="4" class="form-control"></textarea>
    <button type="submit" class="btn btn-primary mt-2">Gửi bình luận</button>
</form>

<hr />

@if (Model.CommentList.Count == 0)
{
    <p>Chưa có bình luận.</p>
}
else
{
    <ul>
        @foreach (var c in Model.CommentList)
        {
            <li>
                <b>@c.AccountName</b> - @c.CommentDate.ToString("dd/MM/yyyy HH:mm")<br />
                @c.CommentText
            </li>
        }
    </ul>
}
