@page
@model FUNewsManagementSystem.Web.Pages.Public.IndexModel
@{
    ViewData["Title"] = "Public News";
}

<h2>Public News</h2>

@if (Model.PublishedNews == null || !Model.PublishedNews.Any())
{
    <p>No news available.</p>
}
else
{
    <ul class="list-group">
        @foreach (var item in Model.PublishedNews)
        {
            <li class="list-group-item">
                <a asp-page="./Detail" asp-route-id="@item.NewsArticleID">
                    <strong>@item.NewsTitle</strong>
                </a>
                <div>
                    <small>
                        @item.CreatedDate.ToString("yyyy-MM-dd")
                        | @item.CategoryName
                    </small>
                </div>
            </li>
        }
    </ul>
}
