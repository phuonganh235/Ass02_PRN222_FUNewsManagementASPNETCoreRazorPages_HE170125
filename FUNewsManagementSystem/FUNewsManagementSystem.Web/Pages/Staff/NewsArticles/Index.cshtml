@page
@model FUNewsManagementSystem.Web.Pages.Staff.NewsArticles.IndexModel
@{
    ViewData["Title"] = "News Article Management";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-newspaper"></i> News Article Management</h2>
        <p class="text-muted">Manage your news articles with real-time updates</p>
    </div>
    <div class="col-md-6 text-end">
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Article
        </a>
        <a asp-page="History" class="btn btn-info">
            <i class="fas fa-history"></i> My History
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Search & Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="searchTerm" class="form-control"
                       placeholder="Search by title or content..."
                       value="@Model.SearchTerm" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId"
                                selected="@(Model.CategoryId == category.CategoryId)">
                            @category.CategoryName
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <option value="true" selected="@(Model.Status == true)">Active</option>
                    <option value="false" selected="@(Model.Status == false)">Inactive</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <a href="/Staff/NewsArticles/Index" class="btn btn-success w-100">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <strong>Total:</strong> @Model.NewsList.Count articles found
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.CategoryId.HasValue || Model.Status.HasValue)
            {
                <span>(Filtered)</span>
            }
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="10%">ID</th>
                        <th width="30%">Title</th>
                        <th width="15%">Category</th>
                        <th width="15%">Author</th>
                        <th width="12%">Created Date</th>
                        <th width="8%">Status</th>
                        <th width="10%">Actions</th>
                    </tr>
                </thead>
                <tbody id="newsTableBody">
                    @foreach (var news in Model.NewsList)
                    {
                        <tr id="row_@news.NewsArticleId">
                            <td><code>@news.NewsArticleId</code></td>
                            <td>
                                <strong>@news.NewsTitle</strong><br />
                                <small class="text-muted">@news.Headline</small>
                            </td>
                            <td><span class="badge bg-primary">@news.CategoryName</span></td>
                            <td>
                                <i class="fas fa-user"></i> @news.CreatedByName
                            </td>
                            <td>
                                <small>@news.CreatedDate.ToString("dd/MM/yyyy")</small><br />
                                <small class="text-muted">@news.CreatedDate.ToString("HH:mm")</small>
                            </td>
                            <td>
                                @if (news.NewsStatus)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Details" asp-route-id="@news.NewsArticleId"
                                       class="btn btn-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-page="Edit" asp-route-id="@news.NewsArticleId"
                                       class="btn btn-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-danger"
                                            onclick="confirmDelete('@news.NewsArticleId', '@news.NewsTitle')"
                                            title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.NewsList.Any())
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-triangle"></i> No news articles found.
                <a asp-page="Create" class="btn btn-sm btn-primary ms-2">
                    <i class="fas fa-plus"></i> Create your first article
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            if (confirm(`⚠️ DELETE CONFIRMATION\n\nAre you sure you want to delete:\n"${title}"?\n\nThis action cannot be undone.`)) {
                deleteNews(id, title);
            }
        }

        async function deleteNews(id, title) {
            showLoading();

            try {
                const response = await fetch(`/Staff/NewsArticles/Delete?id=${encodeURIComponent(id)}`, {
                    method: 'POST'
                });

                const result = await response.json();

                hideLoading();

                if (result.success) {
                    toastr.success(result.message);

                    // Remove row with animation
                    const row = document.getElementById(`row_${id}`);
                    if (row) {
                        row.style.transition = 'opacity 0.5s';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 500);
                    }

                    // Notify via SignalR
                    await window.signalRConnection.invoke("NotifyNewsArticleDeleted", title);
                } else {
                    toastr.error(result.message);
                }
            } catch (error) {
                hideLoading();
                toastr.error('An error occurred while deleting the article');
                console.error(error);
            }
        }

        // Real-time refresh function
        function refreshNewsList() {
            location.reload();
        }
        window.refreshNewsList = refreshNewsList;
    </script>
}