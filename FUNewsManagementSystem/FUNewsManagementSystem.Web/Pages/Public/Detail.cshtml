@page "{id}"
@model FUNewsManagementSystem.Web.Pages.News.DetailModel
@{
    ViewData["Title"] = "Chi tiết bài viết";
}

@if (Model.Article == null)
{
    <h3>Bài viết không tồn tại!</h3>
}
else
{
    <h2>@Model.Article.NewsTitle</h2>
    <p><b>Chuyên mục:</b> @Model.Article.Category?.CategoryName</p>
    <p><b>Ngày tạo:</b> @Model.Article.CreatedDate.ToString("dd/MM/yyyy")</p>
    <p><b>Nguồn:</b> @Model.Article.NewsSource</p>

    <div style="margin-top:20px; white-space:pre-wrap;">
        @Model.Article.NewsContent
    </div>

    <hr />
    <h4>Bình luận</h4>

    @if (Model.Comments.Count == 0)
    {
        <p>Chưa có bình luận nào.</p>
    }
    else
    {
        <ul>
            @foreach (var c in Model.Comments)
            {
                <li>
                    <b>@c.AccountName</b> (@c.CommentDate.ToString("HH:mm dd/MM/yyyy"))<br />
                    @c.CommentText
                </li>
            }
        </ul>
    }
}
