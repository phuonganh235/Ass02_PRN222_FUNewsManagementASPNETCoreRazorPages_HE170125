@page
@model FUNewsManagementSystem.Web.Pages.Comments.IndexModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Comments Management";
    Layout = "_Layout";
}

<h3 class="mb-3">Comments Management</h3>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Comment By</th>
            <th>Content</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.CommentList == null || !Model.CommentList.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No comments available.</td>
            </tr>
        }
        else
        {
            @foreach (var c in Model.CommentList)
            {
                <tr>
                    <td>@c.CommentID</td>
                    <td>@c.CommentBy</td>
                    <td>@c.CommentText</td>
                    <td>@c.CommentDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (HttpContext.Session.GetInt32("AccountRole") == 3)
                        {
                            <form method="post" class="d-inline">
                                <input type="hidden" name="commentId" value="@c.CommentID" />
                                <button class="btn btn-sm btn-danger"
                                        formaction="?handler=Delete"
                                        onclick="return confirm('Delete this comment?');">
                                    Delete
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
