@page
@model FUNewsManagementSystem.Web.Pages.Staff.NewsArticles.DetailsModel
@{
    ViewData["Title"] = "News Details";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-newspaper"></i> News Article Details</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-page="Edit" asp-route-id="@Model.News.NewsArticleId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Main Content -->
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <div class="mb-3">
                    <span class="badge bg-primary">@Model.News.CategoryName</span>
                    @if (Model.News.NewsStatus)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                    <span class="badge bg-info">ID: @Model.News.NewsArticleId</span>
                </div>

                <h3 class="mb-3">@Model.News.NewsTitle</h3>

                <p class="lead text-muted">@Model.News.Headline</p>

                <div class="mb-3">
                    <small class="text-muted">
                        <i class="fas fa-user"></i> @Model.News.CreatedByName |
                        <i class="fas fa-calendar"></i> @Model.News.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                        @if (Model.News.ModifiedDate.HasValue)
                        {
                            <br />
                            <i class="fas fa-edit"></i>
                            <span>
                                Last updated: @Model.News.ModifiedDate.Value.ToString("dd/MM/yyyy HH:mm")
                                by @Model.News.UpdatedByName
                            </span>
                        }
                    </small>
                </div>

                @if (Model.News.Tags.Any())
                {
                    <div class="mb-3">
                        @foreach (var tag in Model.News.Tags)
                        {
                            <span class="badge bg-secondary"><i class="fas fa-tag"></i> @tag.TagName</span>
                        }
                    </div>
                }

                <hr />

                <div class="news-content">
                    @Model.News.NewsContent
                </div>

                @if (!string.IsNullOrEmpty(Model.News.NewsSource))
                {
                    <hr />
                    <p class="text-muted">
                        <strong>Source:</strong> @Model.News.NewsSource
                    </p>
                }
            </div>
        </div>

        <!-- Comments Section -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-comments"></i> Comments
                    <span class="badge bg-light text-dark" id="commentCount">@Model.Comments.Count</span>
                </h5>
            </div>
            <div class="card-body">
                <!-- Add Comment Form -->
                <div class="mb-4">
                    <h6>Add a Comment</h6>
                    <form id="commentForm">
                        <div class="mb-3">
                            <textarea id="commentContent" class="form-control" rows="3"
                                      placeholder="Write your comment here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane"></i> Post Comment
                        </button>
                    </form>
                </div>

                <hr />

                <!-- Comments List -->
                <div id="commentsList">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="comment-box" id="comment_@comment.CommentId">
                            <div class="comment-header">
                                <span class="comment-author">
                                    <i class="fas fa-user-circle"></i> @comment.AccountName
                                </span>
                                <div>
                                    <span class="comment-time">@comment.TimeAgo</span>
                                    @if (Model.UserRole == 0 || comment.AccountId == Model.UserId)
                                    {
                                        <button class="btn btn-sm btn-danger ms-2"
                                                onclick="deleteComment(@comment.CommentId)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                            <p class="comment-content">@comment.Content</p>
                        </div>
                    }
                </div>

                @if (!Model.Comments.Any())
                {
                    <div class="alert alert-info text-center" id="noCommentsAlert">
                        <i class="fas fa-info-circle"></i> No comments yet. Be the first to comment!
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-md-4">
        <!-- Related News -->
        @if (Model.RelatedNews.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-newspaper"></i> Related Articles</h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var related in Model.RelatedNews)
                    {
                        <a asp-page="Details" asp-route-id="@related.NewsArticleId"
                           class="list-group-item list-group-item-action">
                            <h6 class="mb-1">@related.NewsTitle</h6>
                            <small class="text-muted">@related.CreatedDate.ToString("dd/MM/yyyy")</small>
                        </a>
                    }
                </div>
            </div>
        }

        <!-- Article Info -->
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Article Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Category:</strong><br />@Model.News.CategoryName</p>
                <p><strong>Author:</strong><br />@Model.News.CreatedByName</p>
                <p><strong>Created:</strong><br />@Model.News.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p>
                    <strong>Status:</strong><br />
                    @if (Model.News.NewsStatus)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const newsArticleId = '@Model.News.NewsArticleId';
        const userId = @(Model.UserId ?? 0);
        const userName = '@Model.UserName';

        // Handle comment form submission
        document.getElementById('commentForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const content = document.getElementById('commentContent').value.trim();
            if (!content) return;

            try {
                const response = await fetch('/Staff/NewsArticles/AddComment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        newsArticleId: newsArticleId,
                        content: content
                    })
                });

                const result = await response.json();

                if (result.success) {
                    document.getElementById('commentContent').value = '';
                    toastr.success('Comment posted successfully!');
                } else {
                    toastr.error(result.message || 'Failed to post comment');
                }
            } catch (error) {
                console.error('Error posting comment:', error);
                toastr.error('An error occurred while posting the comment');
            }
        });

        // Real-time comment receiving
        window.signalRConnection.on("ReceiveComment", function(articleId, commentId, accountName, content, timeAgo) {
            if (articleId === newsArticleId) {
                addCommentToList(articleId, commentId, accountName, content, timeAgo);
            }
        });

        function addCommentToList(articleId, commentId, accountName, content, timeAgo) {
            // Remove "no comments" alert if exists
            const noCommentsAlert = document.getElementById('noCommentsAlert');
            if (noCommentsAlert) {
                noCommentsAlert.remove();
            }

            // Create comment HTML
            const commentHtml = `
                <div class="comment-box fade-in" id="comment_${commentId}">
                    <div class="comment-header">
                        <span class="comment-author">
                            <i class="fas fa-user-circle"></i> ${accountName}
                        </span>
                        <div>
                            <span class="comment-time">${timeAgo}</span>
                        </div>
                    </div>
                    <p class="comment-content">${content}</p>
                </div>
            `;

            // Add to list
            const commentsList = document.getElementById('commentsList');
            commentsList.insertAdjacentHTML('afterbegin', commentHtml);

            // Update count
            const countBadge = document.getElementById('commentCount');
            const currentCount = parseInt(countBadge.textContent);
            countBadge.textContent = currentCount + 1;
        }

        // Delete comment
        async function deleteComment(commentId) {
            if (!confirm('Are you sure you want to delete this comment?')) return;

            try {
                const response = await fetch(`/Staff/NewsArticles/DeleteComment?id=${commentId}`, {
                    method: 'POST'
                });

                const result = await response.json();

                if (result.success) {
                    toastr.success('Comment deleted successfully');
                } else {
                    toastr.error(result.message || 'Failed to delete comment');
                }
            } catch (error) {
                console.error('Error deleting comment:', error);
                toastr.error('An error occurred while deleting the comment');
            }
        }

        // Handle comment deletion via SignalR
        window.signalRConnection.on("CommentDeleted", function(commentId, articleId) {
            if (articleId === newsArticleId) {
                removeCommentFromList(commentId);
            }
        });

        function removeCommentFromList(commentId) {
            const commentElement = document.getElementById(`comment_${commentId}`);
            if (commentElement) {
                commentElement.remove();

                // Update count
                const countBadge = document.getElementById('commentCount');
                const currentCount = parseInt(countBadge.textContent);
                countBadge.textContent = Math.max(0, currentCount - 1);

                // Show "no comments" if empty
                const commentsList = document.getElementById('commentsList');
                if (commentsList.children.length === 0) {
                    commentsList.innerHTML = `
                        <div class="alert alert-info text-center" id="noCommentsAlert">
                            <i class="fas fa-info-circle"></i> No comments yet. Be the first to comment!
                        </div>
                    `;
                }
            }
        }

        // Make functions globally available
        window.addCommentToList = addCommentToList;
        window.removeCommentFromList = removeCommentFromList;
    </script>
}