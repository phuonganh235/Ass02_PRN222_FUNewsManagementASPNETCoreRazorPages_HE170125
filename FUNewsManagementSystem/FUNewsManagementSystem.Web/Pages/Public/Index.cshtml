@page
@model FUNewsManagementSystem.Web.Pages.Public.IndexModel
@{
    ViewData["Title"] = "News Portal";
    Layout = "_Layout";
}

<h3 class="mb-4">News Portal</h3>

@if (Model.PublishedNews.Count == 0)
{
    <p>No published articles yet.</p>
}
else
{
    <div class="row">
        @foreach (var n in Model.PublishedNews)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5>@n.NewsTitle</h5>
                        <p class="text-muted small mb-1">@n.CategoryName | by @n.CreatedByName</p>
                        <p class="text-truncate">@n.NewsContent</p>
                        <a class="btn btn-sm btn-primary"
                           asp-page="/Public/Detail"
                           asp-route-id="@n.NewsArticleID">
                            Read more
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
