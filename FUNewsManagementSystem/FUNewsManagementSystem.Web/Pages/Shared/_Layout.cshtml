@{
    var userName = Context.Session.GetString("UserName");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FUNews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container py-3">
    <header class="mb-3 d-flex justify-content-between align-items-center">
        <h3>FUNews</h3>
        <nav>
            <a class="btn btn-link" asp-page="/Public/Index">Public</a>
            <a class="btn btn-link" asp-page="/News/Index">News</a>
            <a class="btn btn-link" asp-page="/Categories/Index">Categories</a>
            <a class="btn btn-link" asp-page="/Tags/Index">Tags</a>
            <a class="btn btn-link" asp-page="/Dashboard/Index">Dashboard</a>
            @if (string.IsNullOrEmpty(userName))
            {
                <a class="btn btn-primary" asp-page="/Auth/Login">Login</a>
            }
            else
            {
                <span class="me-2">Hello, @userName</span>
                <a class="btn btn-outline-danger" asp-page="/Auth/Logout">Logout</a>
            }
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
</body>
</html>
