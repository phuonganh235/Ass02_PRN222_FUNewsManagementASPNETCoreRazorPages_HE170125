@model object
@using BusinessLogic.ViewModels

@{
    bool isEdit = Model is AccountEditVM;
    string formId = isEdit ? "editAccountForm" : "createAccountForm";
    string submitMode = isEdit ? "edit" : "create";

    short accountIdVal = 0;
    string? accountNameVal = "";
    string? emailVal = "";
    int roleVal = 1;
    string passwordVal = "";

    if (isEdit)
    {
        var m = (AccountEditVM)Model;
        accountIdVal = m.AccountID;
        accountNameVal = m.AccountName;
        emailVal = m.AccountEmail;
        roleVal = m.AccountRole;
        passwordVal = m.AccountPassword;
    }
    else
    {
        var m = (AccountCreateVM)Model;
        accountIdVal = m.AccountID;
        accountNameVal = m.AccountName;
        emailVal = m.AccountEmail;
        roleVal = m.AccountRole;
        passwordVal = m.AccountPassword;
    }
}

<div class="modal-header">
    <h5 class="modal-title">@((isEdit ? "Edit Account" : "Create Account"))</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"
            aria-label="Close"></button>
</div>

<div class="modal-body">
    <form id="@formId" onsubmit="return submitAccountForm(this,'@submitMode')">

        <div class="mb-2">
            <label class="form-label">Account ID</label>
            <input class="form-control"
                   name="@(isEdit ? "EditModel.AccountID" : "CreateModel.AccountID")"
                   value="@accountIdVal"
                   @(isEdit ? "readonly" : "required") />
            <div class="form-text">
                smallint - bạn phải cấp ID khi tạo user mới
            </div>
        </div>

        <div class="mb-2">
            <label class="form-label">Account Name</label>
            <input class="form-control"
                   name="@(isEdit ? "EditModel.AccountName" : "CreateModel.AccountName")"
                   value="@accountNameVal" required />
        </div>

        <div class="mb-2">
            <label class="form-label">Email</label>
            <input type="email" class="form-control"
                   name="@(isEdit ? "EditModel.AccountEmail" : "CreateModel.AccountEmail")"
                   value="@emailVal" />
        </div>

        <div class="mb-2">
            <label class="form-label">Role</label>
            <select class="form-select"
                    name="@(isEdit ? "EditModel.AccountRole" : "CreateModel.AccountRole")">
                <option value="1" selected="@(roleVal == 1)">Lecturer (1)</option>
                <option value="2" selected="@(roleVal == 2)">Staff (2)</option>
                <option value="3" selected="@(roleVal == 3)">Admin (3)</option>

            </select>
        </div>

        <div class="mb-2">
            <label class="form-label">Password</label>
            <input class="form-control"
                   name="@(isEdit ? "EditModel.AccountPassword" : "CreateModel.AccountPassword")"
                   value="@passwordVal"
                   required />
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">
                @(isEdit ? "Save Changes" : "Create")
            </button>
            <button type="button" class="btn btn-secondary"
                    data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>
