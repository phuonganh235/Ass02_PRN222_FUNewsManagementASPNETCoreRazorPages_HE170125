@page
@model FUNewsManagementSystem.Web.Pages.Staff.Tags.IndexModel
@{
    ViewData["Title"] = "Tag Management";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-tags"></i> Tag Management</h2>
    </div>
    <div class="col-md-6 text-end">
        <button type="button" class="btn btn-primary" onclick="openCreateModal()">
            <i class="fas fa-plus"></i> Add New Tag
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-10">
                <input type="text" id="searchInput" class="form-control" placeholder="Search tags..." />
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-secondary w-100" onclick="searchTags()">
                    <i class="fas fa-search"></i> Search
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tag Name</th>
                        <th>Note</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tagTableBody">
                    @foreach (var tag in Model.Tags)
                    {
                        <tr>
                            <td>@tag.TagId</td>
                            <td><span class="badge bg-secondary fs-6">@tag.TagName</span></td>
                            <td>@tag.Note</td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="openEditModal(@tag.TagId)">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="confirmDelete(@tag.TagId, '@tag.TagName')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Tags.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> No tags found.
            </div>
        }
    </div>
</div>

<!-- Modal for Create/Edit -->
<div class="modal fade" id="tagModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add New Tag</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="tagForm">
                    <input type="hidden" id="tagId" />

                    <div class="mb-3">
                        <label for="tagName" class="form-label">Tag Name *</label>
                        <input type="text" class="form-control" id="tagName" required />
                    </div>

                    <div class="mb-3">
                        <label for="note" class="form-label">Note</label>
                        <textarea class="form-control" id="note" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveTag()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let tagModal;

        $(document).ready(function() {
            tagModal = new bootstrap.Modal(document.getElementById('tagModal'));
        });

        function openCreateModal() {
            $('#modalTitle').text('Add New Tag');
            $('#tagForm')[0].reset();
            $('#tagId').val('');
            tagModal.show();
        }

        async function openEditModal(id) {
            showLoading();

            try {
                const response = await fetch(`/Tags/Index?handler=Get&id=${id}`);
                const tag = await response.json();

                hideLoading();

                $('#modalTitle').text('Edit Tag');
                $('#tagId').val(tag.tagId);
                $('#tagName').val(tag.tagName);
                $('#note').val(tag.note || '');

                tagModal.show();
            } catch (error) {
                hideLoading();
                toastr.error('Failed to load tag data');
                console.error(error);
            }
        }

        async function saveTag() {
            const tagData = {
                TagId: parseInt($('#tagId').val()) || 0,
                TagName: $('#tagName').val().trim(),
                Note: $('#note').val().trim()
            };

            if (!tagData.TagName) {
                toastr.error('Tag name is required');
                return;
            }

            const handler = tagData.TagId > 0 ? 'Update' : 'Create';
            const url = `/Tags/Index?handler=${handler}`;

            showLoading();

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(tagData)
                });

                const result = await response.json();

                hideLoading();

                if (result.success) {
                    toastr.success(result.message);
                    tagModal.hide();

                    // Notify via SignalR
                    if (tagData.TagId > 0) {
                        await window.signalRConnection?.invoke("NotifyTagUpdated", tagData.TagName);
                    } else {
                        await window.signalRConnection?.invoke("NotifyTagCreated", tagData.TagName);
                    }

                    setTimeout(() => location.reload(), 1500);
                } else {
                    toastr.error(result.message);
                }
            } catch (error) {
                hideLoading();
                toastr.error('An error occurred while saving the tag');
                console.error(error);
            }
        }

        function confirmDelete(id, name) {
            if (confirm(`Are you sure you want to delete tag "${name}"?`)) {
                deleteTag(id, name);
            }
        }

        async function deleteTag(id, name) {
            showLoading();

            try {
                const response = await fetch(`/Tags/Index?handler=Delete&id=${id}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                hideLoading();

                if (result.success) {
                    toastr.success(result.message);

                    // Notify via SignalR
                    await window.signalRConnection?.invoke("NotifyTagDeleted", name);

                    setTimeout(() => location.reload(), 1500);
                } else {
                    toastr.error(result.message);
                }
            } catch (error) {
                hideLoading();
                toastr.error('An error occurred while deleting the tag');
                console.error(error);
            }
        }

        async function searchTags() {
            const searchTerm = $('#searchInput').val();
            window.location.href = `?searchTerm=${searchTerm}`;
        }

        // Real-time refresh function
        function refreshTagsList() {
            location.reload();
        }
        window.refreshTagsList = refreshTagsList;

        // SignalR Real-time notifications
        if (window.signalRConnection) {
            // Tag created
            window.signalRConnection.on("TagCreated", function(tagName) {
                toastr.success(`🏷️ New tag "${tagName}" has been created`, 'Tag Created', {
                    timeOut: 4000,
                    closeButton: true
                });
                setTimeout(() => location.reload(), 2000);
            });

            // Tag updated
            window.signalRConnection.on("TagUpdated", function(tagName) {
                toastr.info(`✏️ Tag "${tagName}" has been updated`, 'Tag Updated', {
                    timeOut: 4000,
                    closeButton: true
                });
                setTimeout(() => location.reload(), 2000);
            });

            // Tag deleted
            window.signalRConnection.on("TagDeleted", function(tagName) {
                toastr.warning(`🗑️ Tag "${tagName}" has been deleted`, 'Tag Deleted', {
                    timeOut: 4000,
                    closeButton: true
                });
                setTimeout(() => location.reload(), 2000);
            });
        }
    </script>
}