@page
@model FUNewsManagementSystem.Web.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>
<a asp-page="Create" class="btn btn-primary mb-2">Create</a>
<table class="table table-bordered">
    <tr><th>ID</th><th>Name</th><th>Description</th><th>Active</th><th></th></tr>
    @foreach (var c in Model.Items)
    {
        <tr>
            <td>@c.CategoryID</td>
            <td>@c.CategoryName</td>
            <td>@c.CategoryDescription</td>
            <td>@(c.IsActive ? "Yes" : "No")</td>
            <td>
                <a asp-page="Edit" asp-route-id="@c.CategoryID" class="btn btn-sm btn-success">Edit</a>
                <a asp-page="Delete" asp-route-id="@c.CategoryID" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
