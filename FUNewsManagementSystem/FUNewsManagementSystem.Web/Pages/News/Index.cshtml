@page
@model FUNewsManagementSystem.Web.Pages.News.IndexModel
@{
    ViewData["Title"] = "Danh sách bài viết";
}

<h2>Danh sách bài viết</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã bài viết</th>
            <th>Tiêu đề</th>
            <th>Chuyên mục</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NewsList)
        {
            <tr>
                <td>@item.NewsArticleID</td>
                <td>@item.NewsTitle</td>
                <td>@item.CategoryName</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@(item.NewsStatus ? "Hiển thị" : "Ẩn")</td>
                <td>@item.SelectedTagNamesDisplay</td>
            </tr>
        }
    </tbody>
</table>
