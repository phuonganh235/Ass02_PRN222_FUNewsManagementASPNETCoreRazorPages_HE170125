@page
@model FUNewsManagementSystem.Web.Pages.Tags.IndexModel
@{
    ViewData["Title"] = "Tags";
}

<h3>Tags</h3>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card mb-4">
    <div class="card-header bg-secondary text-white">Create / Edit Tag</div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Input.TagID" />
            <div class="mb-3">
                <label class="form-label">Tag Name</label>
                <input class="form-control" asp-for="Input.TagName" />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary" formaction="?handler=Create">Create New</button>
                <button class="btn btn-warning" formaction="?handler=Update">Update Existing</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped bg-white shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tag Name</th>
            <th style="width:100px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Tags)
        {
            <tr>
                <td>@t.TagID</td>
                <td>@t.TagName</td>
                <td>
                    <form class="d-inline" method="post">
                        <input type="hidden" name="tagId" value="@t.TagID" />
                        <button class="btn btn-sm btn-danger"
                                formaction="?handler=Delete"
                                onclick="return confirm('Delete this tag?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
