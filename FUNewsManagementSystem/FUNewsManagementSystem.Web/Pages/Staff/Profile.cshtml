@page
@model FUNewsManagementSystem.Web.Pages.Staff.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4"><i class="fas fa-user-circle"></i> My Profile</h2>

<div class="row">
    <div class="col-md-8">
        <!-- Profile Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> Profile Information</h5>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <input type="hidden" asp-for="Input.AccountId" />

                    <div class="mb-3">
                        <label asp-for="Input.AccountName" class="form-label">Full Name *</label>
                        <input asp-for="Input.AccountName" class="form-control" />
                        <span asp-validation-for="Input.AccountName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.AccountEmail" class="form-label">Email *</label>
                        <input asp-for="Input.AccountEmail" class="form-control" />
                        <span asp-validation-for="Input.AccountEmail" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <input type="text" class="form-control" value="Staff" disabled />
                        <small class="text-muted">Your role cannot be changed</small>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Profile
                    </button>
                </form>
            </div>
        </div>

        <!-- Change Password -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-key"></i> Change Password</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="ChangePassword">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password *</label>
                        <input type="password" id="currentPassword" name="currentPassword"
                               class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">New Password *</label>
                        <input type="password" id="newPassword" name="newPassword"
                               class="form-control" minlength="6" required />
                        <small class="text-muted">Minimum 6 characters</small>
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm New Password *</label>
                        <input type="password" id="confirmPassword" name="confirmPassword"
                               class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-key"></i> Change Password
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Account Summary -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> My Statistics</h5>
            </div>
            <div class="card-body">
                <p>
                    <strong>Total Articles:</strong><br />
                    <span class="badge bg-primary fs-5">@Model.ArticleCount</span>
                </p>

                <p>
                    <strong>Active Articles:</strong><br />
                    <span class="badge bg-success fs-5">@Model.ActiveArticleCount</span>
                </p>

                <p>
                    <strong>Member Since:</strong><br />
                    <i class="fas fa-calendar"></i> @Model.MemberSince
                </p>

                <hr />

                <a asp-page="/Staff/NewsArticles/History" class="btn btn-sm btn-info w-100 mb-2">
                    <i class="fas fa-history"></i> View My History
                </a>

                <a asp-page="/Staff/NewsArticles/Create" class="btn btn-sm btn-primary w-100">
                    <i class="fas fa-plus"></i> Create New Article
                </a>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
            </div>
            <div class="list-group list-group-flush">
                <a asp-page="/Staff/NewsArticles/Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-newspaper"></i> Manage Articles
                </a>
                <a asp-page="/Staff/Categories/Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-folder"></i> Manage Categories
                </a>
                <a asp-page="/Staff/Tags/Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-tags"></i> Manage Tags
                </a>
                <a asp-page="/Index" class="list-group-item list-group-item-action">
                    <i class="fas fa-home"></i> View Public News
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Validate password confirmation
        document.getElementById('confirmPassword')?.addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;

            if (newPassword !== confirmPassword) {
                this.setCustomValidity('Passwords do not match');
            } else {
                this.setCustomValidity('');
            }
        });
    </script>
}